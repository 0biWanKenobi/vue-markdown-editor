{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "declarationDir": "lib/@types/js",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@vuepress/shared-utils/lib/slugify.js": [
        "./node_modules/@vuepress/shared-utils/types/slugify.d.ts"
      ],
      "@vuepress/markdown/lib/lineNumbers.js": ["./src/lineNumbers.d.ts"]
    },
    "types": ["node", "webpack-env"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "build"]
}
