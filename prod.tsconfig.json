{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "declarationDir": "lib/@types/js",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "webpack-env"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/types/editorConfig.ts",
    "src/types/editorType.ts",
    "src/types/pluginCreationFnParams.ts",
    "src/types/pluginCreatorFn.ts",
    "src/main.ts",
    "src/preview.ts",
    "src/editor.ts"
  ],
  "exclude": ["node_modules", "lib", "build"]
}
